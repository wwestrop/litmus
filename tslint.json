{
	"defaultSeverity": "warn",
	"rules": {
		"adjacent-overload-signatures": true,
		"no-any": true,
		"no-empty-interface": { "severity": "error" },
		"await-promise": true,
		"curly": { "severity": "error", "options": "ignore-same-line" },
		"no-conditional-assignment": { "severity": "error" },
		"no-duplicate-switch-case": { "severity": "error" },
		"no-duplicate-variable": { "severity": "error" },
		"no-duplicate-imports": true,
		"no-empty": true,
		"no-eval": { "severity": "error" },
		"no-floating-promises": true,
		"no-for-in-array": { "severity": "error" },
		"no-implicit-dependencies": { "severity": "error" },
		"no-invalid-template-strings": { "severity": "error" },
		"no-invalid-this": { "severity": "error" },
		"no-misused-new": { "severity": "error" },
		"no-switch-case-fall-through": { "severity": "error" },
		"no-unused-expression": true,
		"no-use-before-declare": { "severity": "error" },
		"restrict-plus-operands": { "severity": "error" },
		"switch-default": true,
		"triple-equals": { "severity": "error" }, // May not be necessary in Typescript??
		"typeof-compare": { "severity": "error" },
		"use-isnan": { "severity": "error" },
		"deprecation": true,
		"indent": [ true, "tabs", 4],
		"linebreak-style": [true, "CRLF"],
		"max-classes-per-file": [true, 3],
		"max-line-length": [true, 120],
		"prefer-const": true,
		"prefer-readonly": true,
		"array-type": [true, "array"],
		"arrow-return-shorthand": true,
		"class-name": { "severity": "error" },
		"interface-name": { "severity": "error", "options": "always-prefix" },
		"new-parens": { "severity": "error" },
		"no-trailing-whitespace": true,
		"no-unnecessary-qualifier": true,
		"number-literal-format": { "severity": "error" },
		"prefer-method-signature": { "severity": "error" },
		"prefer-template": { "severity": "error" },
		"semicolon": { "severity": "error" }
	}
}