{
  "name": "litmus",
  "version": "0.1.1",
  "description": "Litmus visual test runner for Javascript",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc",
    "start": "electron bin/src",
    "build": "npm-run-all build:*",
    "build:0": "shx mkdir -p bin/src/",
    "build:1": "npm run copy-resources",
    "build:2": "shx cp package.json bin/src/",
    "build:3": "tslint src/ts/**/*.ts",
    "build:4": "parcel build src/ui/index.html --no-minify --target electron --public-url ./ --out-dir bin/src/ui",
    "build:5": "parcel build src/ui/backgroundTestRunnerWorker.html --no-minify  --target electron --public-url ./ --out-dir bin/src/ui",
    "build:6": "parcel build src/index.ts --no-minify  --target electron --public-url ./ --out-dir bin/src",
    "clean": "npm-run-all clean:*",
    "clean:0": "shx rm -rf bin",
    "clean:1": "shx rm -rf dist",
    "clean:2": "shx rm -rf .cache",
    "pack": "npm-run-all pack:*",
    "pack:0": "npm run build",
    "pack:1": "shx cp electron-builder.json bin/src/",
    "pack:2": "electron-builder build --project bin/src",
    "copy-resources": "npm-run-all copy-resources:*",
    "copy-resources:0": "shx mkdir -p bin/src/res/icons",
    "copy-resources:1": "shx cp res/failBadge_taskbar.png bin/src/res/",
    "copy-resources:2": "shx cp res/passBadge_taskbar.png bin/src/res/",
    "copy-resources:3": "shx cp res/icons/48x48.png bin/src/res/icons/"
  },
  "keywords": [
    "litmus",
    "test",
    "unit",
    "testing",
    "mocha",
    "jasmine",
    "chai",
    "js",
    "javascript",
    "mock",
    "spy"
  ],
  "author": "Will Westrop",
  "license": "MIT",
  "homepage": "https://litmus-js.app/",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/lodash": "^4.14.108",
    "@types/mocha": "^2.2.47",
    "@types/node": "^9.4.0",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "chai": "^4.1.2",
    "devtron": "^1.4.0",
    "electron": "^1.8.2",
    "electron-builder": "^20.13.4",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "parcel": "^1.8.1",
    "serve": "^6.4.9",
    "shx": "^0.2.2",
    "ts-mockito": "^2.2.8",
    "tslint": "^5.9.1",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "electron-localshortcut": "^3.1.0",
    "lodash": "^4.17.10",
    "mocha": "^4.1.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "stdlib": "^0.6.0"
  }
}
