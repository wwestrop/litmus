{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,        
        "strictNullChecks": true,        
        "pretty": true,
        "outDir": "bin"
    },
    "include": [
        "src/ts/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
    ]
}