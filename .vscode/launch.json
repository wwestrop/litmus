    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--recursive",
                "${workspaceFolder}/bin/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "tsc-compile",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/bin/src/ts/mocha-ts.js",
            "protocol": "inspector",
            "preLaunchTask": "tsc-compile",
            "sourceMaps": true
        }
    ]
}